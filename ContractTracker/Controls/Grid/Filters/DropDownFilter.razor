@inherits DropDownFilterBase
@using ContractTracker.ClientModels.Generic


<div>
    Test (Filter Id, but this could be a filter description): @FilterId
</div>
<div class="row form-row">
    <div class="col-md-8">
        <EditForm Model="dropDownFilerComponent">
            <InputSelect class="form-select" id="domain"
                         ValueExpression="@(() => dropDownFilerComponent.Value)"
                         Value="dropDownFilerComponent.Value"
                         ValueChanged="@((string value) => ValueChanged(value))">
                @foreach (var domain in dropDownFilerComponent.HardCodedSelectOptions)
                {
                    <option value=@domain.Value>@domain.Text</option>
                }
            </InputSelect>
        </EditForm>
    </div>
    <div class="col-md-4">
        <button type="button" class="btn bg-danger" @onclick="() => RemoveMe()"> <span class="oi oi-minus" aria-hidden="true"></span> </button>
    </div>
</div>